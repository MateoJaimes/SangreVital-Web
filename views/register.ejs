<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Registro de Usuario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(rgba(220, 53, 69, 0.9), rgba(220, 53, 69, 0.8)), url('https://d100mj7v0l85u5.cloudfront.net/s3fs-public/2022-08/donacion-de-sangre.png');
            background-size: cover;
            background-position: center;
            min-height: 100vh;
            display: flex;
            align-items: center;
        }
        .card {
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            border: none;
        }
        .card-body {
            padding: 2.5rem;
        }
        .form-control {
            height: 50px;
            border-radius: 8px;
            border: 1px solid #ddd;
        }
        .btn-custom {
            height: 50px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s;
        }
        .text-danger {
            color: #dc3545 !important;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card">
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <h2 class="text-danger fw-bold">
                                <i class="bi bi-person-plus-fill"></i> Registro de Usuario
                            </h2>
                        </div>

                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-circle"></i> <%= error %>
                            </div>
                        <% } %>

                        <form action="/register" method="POST">
                            <div class="mb-3">
                                <label for="id_usuario" class="form-label">Documento de Identidad*</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    id="id_usuario"
                                    name="id_usuario"
                                    value="<%= formData && formData.id_usuario ? formData.id_usuario : '' %>"
                                    required
                                >
                            </div>

                            <div class="mb-3">
                                <label for="correo" class="form-label">Correo Electrónico*</label>
                                <input
                                    type="email"
                                    class="form-control"
                                    id="correo"
                                    name="correo"
                                    value="<%= formData && formData.correo ? formData.correo : '' %>"
                                    required
                                >
                            </div>

                            <div class="mb-4">
                                <label for="contrasena" class="form-label">Contraseña*</label>
                                <input
                                    type="password"
                                    class="form-control"
                                    id="contrasena"
                                    name="contrasena"
                                    required
                                >
                                <div class="form-text">Mínimo 8 caracteres</div>
                            </div>

                            <button type="submit" class="btn btn-danger w-100 btn-custom">
                                <i class="bi bi-person-check"></i> Registrarse
                            </button>
                        </form>

                        <div class="mt-3 text-center">
                            ¿Ya tienes una cuenta? <a href="/login" class="text-danger text-decoration-none">Inicia sesión</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Validación simple en frontend -->
    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
            const password = document.getElementById('contrasena').value;
            if (password.length < 8) {
                e.preventDefault();
                alert('La contraseña debe tener al menos 8 caracteres');
            }
        });
    </script>
</body>
</html>
