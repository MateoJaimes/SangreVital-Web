<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SangreVital - Editar Perfil</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Google Fonts - Montserrat -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --sangre-primary: #dc3545;
            --sangre-secondary: #f8d7da;
            --sangre-dark: #c82333;
            --sangre-light: #f8f9fa;
            --sangre-card-shadow: 0 4px 20px rgba(220, 53, 69, 0.1);
        }

        body {
            background-color: #fefefe;
            font-family: 'Montserrat', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            background-size: 300px;
            background-attachment: fixed;
            background-color: rgba(255,255,255,0.9);
            background-blend-mode: overlay;
        }

        .navbar-sangre {
            background: linear-gradient(135deg, var(--sangre-primary) 0%, var(--sangre-dark) 100%);
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
            padding: 0.8rem 0;
        }

        .profile-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            padding: 2rem 0;
        }

        .form-section {
            background: white;
            border-radius: 16px;
            box-shadow: var(--sangre-card-shadow);
            padding: 1.5rem;
            transition: all 0.3s ease;
        }

        .form-section:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(220, 53, 69, 0.15);
        }

        .section-header {
            color: var(--sangre-primary);
            font-weight: 600;
            margin-bottom: 1.5rem;
            position: relative;
            padding-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .section-header::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background: var(--sangre-primary);
            border-radius: 3px;
        }

        .form-label {
            font-weight: 500;
            color: #555;
            margin-bottom: 0.5rem;
        }

        .form-control, .form-select {
            border-radius: 8px;
            padding: 0.75rem 1rem;
            border: 1px solid #ddd;
            transition: all 0.3s;
            margin-bottom: 1rem;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--sangre-primary);
            box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
        }

        .btn-sangre {
            background-color: var(--sangre-primary);
            color: white;
            font-weight: 500;
            transition: all 0.3s;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            box-shadow: 0 2px 10px rgba(220, 53, 69, 0.3);
            width: 100%;
            margin-top: 1rem;
        }

        .btn-sangre:hover {
            background-color: var(--sangre-dark);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(220, 53, 69, 0.4);
        }

        .page-title {
            font-weight: 600;
            color: var(--sangre-primary);
            text-align: center;
            margin: 1.5rem 0;
            position: relative;
            padding-bottom: 0.5rem;
        }

        .page-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: var(--sangre-primary);
            border-radius: 3px;
        }

        footer {
            background: linear-gradient(135deg, #1a1a1a 0%, #000 100%);
            padding: 2rem 0;
            margin-top: 2rem;
        }

        /* Ajustes específicos para Montserrat */
        h1, h2, h3, h4, h5, h6 {
            font-weight: 600;
            letter-spacing: -0.5px;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .profile-container {
                grid-template-columns: 1fr;
                padding: 1rem;
            }
            
            .page-title {
                font-size: 1.75rem;
                margin: 1rem 0;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-sangre">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/dashboard">
                <i class="bi bi-droplet-fill"></i> SangreVital
            </a>
            <div class="d-flex align-items-center">
                <a href="/dashboard" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <h1 class="page-title">Editar Perfil</h1>
        
        <form action="/edit-profile" method="POST">
            <input type="hidden" name="id" value="<%= donor.id %>">
            
            <div class="profile-container">
                <!-- Columna 1: Información Personal -->
                <div class="form-section">
                    <h3 class="section-header">
                        <i class="bi bi-person-lines-fill"></i> Información Personal
                    </h3>
                    <div class="mb-3">
                        <label for="first_name" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="first_name" name="first_name" value="<%= donor.first_name %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="last_name" class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="last_name" name="last_name" value="<%= donor.last_name %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= donor.email || '' %>" required>
                    </div>
                </div>
                
                <!-- Columna 2: Información Médica -->
                <div class="form-section">
                    <h3 class="section-header">
                        <i class="bi bi-heart-pulse"></i> Información Médica
                    </h3>
                    <div class="mb-3">
                        <label for="birth_date" class="form-label">Fecha de Nacimiento</label>
                        <input type="date" class="form-control" id="birth_date" name="birth_date" value="<%= formatDate(donor.birth_date) %>">
                    </div>
                    <div class="mb-3">
                        <label for="blood_type" class="form-label">Grupo Sanguíneo</label>
                        <select class="form-select" id="blood_type" name="blood_type" required>
                            <option value="A+" <%= donor.blood_type === 'A+' ? 'selected' : '' %>>A+</option>
                            <option value="A-" <%= donor.blood_type === 'A-' ? 'selected' : '' %>>A-</option>
                            <option value="B+" <%= donor.blood_type === 'B+' ? 'selected' : '' %>>B+</option>
                            <option value="B-" <%= donor.blood_type === 'B-' ? 'selected' : '' %>>B-</option>
                            <option value="O+" <%= donor.blood_type === 'O+' ? 'selected' : '' %>>O+</option>
                            <option value="O-" <%= donor.blood_type === 'O-' ? 'selected' : '' %>>O-</option>
                            <option value="AB+" <%= donor.blood_type === 'AB+' ? 'selected' : '' %>>AB+</option>
                            <option value="AB-" <%= donor.blood_type === 'AB-' ? 'selected' : '' %>>AB-</option>
                        </select>
                    </div>
                </div>
                
                <!-- Columna 3: Dirección -->
                <div class="form-section">
                    <h3 class="section-header">
                        <i class="bi bi-geo-alt-fill"></i> Dirección
                    </h3>
                    <div class="mb-3">
                        <label for="address" class="form-label">Dirección Completa</label>
                        <input type="text" class="form-control" id="address" name="address" value="<%= donor.address %>">
                    </div>
                    <div class="mb-3">
                        <label for="state" class="form-label">Departamento</label>
                        <select class="form-select" id="state" name="state" required>
                            <option value="" disabled selected>Selecciona un departamento</option>
                            <% if (typeof states !== 'undefined') { %>
                                <% states.forEach(function(state) { %>
                                    <option value="<%= state.code_state %>" <%= donor.code_city && cities.find(c => c.code_city === donor.code_city && c.code_state === state.code_state) ? 'selected' : '' %>><%= state.name_state %></option>
                                <% }); %>
                            <% } %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="code_city" class="form-label">Ciudad</label>
                        <select class="form-select" id="code_city" name="code_city" required>
                            <option value="" disabled selected>Selecciona una ciudad</option>
                            <% if (typeof cities !== 'undefined') { %>
                                <% cities.forEach(function(city) { %>
                                    <option value="<%= city.code_city %>" data-state="<%= city.code_state %>" <%= donor.code_city === city.code_city ? 'selected' : '' %>><%= city.name_city %></option>
                                <% }); %>
                            <% } %>
                        </select>
                    </div>
                </div>
            </div>
            
            <!-- Botones de acción -->
            <div class="d-flex justify-content-center my-4">
                <button type="submit" class="btn btn-sangre" style="max-width: 300px;">
                    <i class="bi bi-check-circle-fill"></i> Guardar Cambios
                </button>
            </div>
        </form>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="text-center small">
                <p class="mb-0">© 2023 SangreVital - Todos los derechos reservados</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const stateSelect = document.getElementById('state');
        const citySelect = document.getElementById('code_city');
        const allCityOptions = Array.from(citySelect.options);
        function filterCities() {
          const selectedState = stateSelect.value;
          citySelect.innerHTML = '<option value="" disabled selected>Selecciona una ciudad</option>';
          allCityOptions.forEach(option => {
            if (option.value === "") return;
            if (option.getAttribute('data-state') === selectedState) {
              citySelect.appendChild(option.cloneNode(true));
            }
          });
        }
        stateSelect.addEventListener('change', filterCities);
        // Pre-filter on load if editing
        if (stateSelect.value) filterCities();
      });
    </script>
    <% function formatDate(date) { if (!date) return ''; if (typeof date === 'string') return date.slice(0,10); if (date.toISOString) return date.toISOString().slice(0,10); return ''; } %>
</body>
</html>