<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SangreVital - Editar Perfil</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --sangre-primary: #dc3545;
            --sangre-dark: #c82333;
        }

        body {
            background-color: #f9f9f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .btn-sangre {
            background-color: var(--sangre-primary);
            color: white;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-sangre:hover {
            background-color: var(--sangre-dark);
            color: white;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/dashboard">
                <i class="bi bi-droplet-fill"></i> SangreVital
            </a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container py-5">
        <h1 class="mb-4 text-center">Editar Perfil</h1>
        <form action="/edit-profile" method="POST">
            <input type="hidden" name="id" value="<%= donor.id %>">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="first_name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="first_name" name="first_name" value="<%= donor.first_name %>" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="last_name" class="form-label">Apellido</label>
                    <input type="text" class="form-control" id="last_name" name="last_name" value="<%= donor.last_name %>" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Correo Electrónico</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= donor.email %>" required>
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Dirección</label>
                <input type="text" class="form-control" id="address" name="address" value="<%= donor.address %>">
            </div>
            <div class="mb-3">
                <label for="birth_date" class="form-label">Fecha de Nacimiento</label>
                <input type="date" class="form-control" id="birth_date" name="birth_date" value="<%= donor.birth_date %>">
            </div>
            <div class="mb-3">
                <label for="blood_type" class="form-label">Grupo Sanguíneo</label>
                <select class="form-select" id="blood_type" name="blood_type" required>
                    <option value="A+" <%= donor.blood_type === 'A+' ? 'selected' : '' %>>A+</option>
                    <option value="A-" <%= donor.blood_type === 'A-' ? 'selected' : '' %>>A-</option>
                    <option value="B+" <%= donor.blood_type === 'B+' ? 'selected' : '' %>>B+</option>
                    <option value="B-" <%= donor.blood_type === 'B-' ? 'selected' : '' %>>B-</option>
                    <option value="O+" <%= donor.blood_type === 'O+' ? 'selected' : '' %>>O+</option>
                    <option value="O-" <%= donor.blood_type === 'O-' ? 'selected' : '' %>>O-</option>
                    <option value="AB+" <%= donor.blood_type === 'AB+' ? 'selected' : '' %>>AB+</option>
                    <option value="AB-" <%= donor.blood_type === 'AB-' ? 'selected' : '' %>>AB-</option>
                </select>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-sangre">Guardar Cambios</button>
                <a href="/dashboard" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </form>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container text-center">
            <p class="mb-0">© 2023 SangreVital - Todos los derechos reservados</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
